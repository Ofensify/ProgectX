<h1>logo</h1>
<h2>info del perfil del usuario:
    <%= user %>
</h2>
<h2>carrousel de imagenes para seleccionar el fondo del insulto</h2>
<form action="/createnew" method="POST">
    <div id="carouselExampleControls" data-interval="false" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <% memes.forEach((m,i,arr) => { %>
                <% if (i==0) { %>
                    <div class="carousel-item active">
                        <% } else { %>
                            <div class="carousel-item">
                                <% }%>
                                    <img class="d-block w-100" style="height:500px" src="/images/memes/<%= m %>" alt="<%= i %> slide">   
                                </div>
                                <%})%>
                                <input name= "img" id="actualImg" hidden value="a">
                                <a class="carousel-control-prev flecha" href="#carouselExampleControls" role="button" data-slide="prev" >
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                
                                </a>
                                <a class="carousel-control-next flecha" href="#carouselExampleControls" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                   
                                </a>
    </div>
    <h2>Tipo de insulto??</h2>
    <select id="Sexo" name="sexo">
        <option value="0" selected>Hombre</option>
        <option value="1">Mujer</option>
    </select>
    <select id="Guapo" name="guapo">
        <option value="0" selected>Feo</option>
        <option value="1">Tonto</option>
    </select>
    <select id="Complex" name="complex">
        <option value="0" selected>Gordo</option>
        <option value="1">Flaco</option>
    </select>
    <select id="Color" name="color">
        <option value="0" selected>Blanco</option>
        <option value="1">Negro</option>
    </select>
    <h2>Destinatario</h2>
    <input type="text" name="name">
    <button>Submit</button>
</form>
<br>
<a href="/home">
    <h2>go home</h2>
</a>