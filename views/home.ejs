<div class="container-first">
    <img class="logo" src="./images/logo-off.png">
    <a href="/createnew">
        <h2>crea tu ofensa </h2>
    </a>
    <a href="/profile/<%= user._id %>">
        <h2>tu perfil </h2>
    </a>
    <h2>ofensas en orden de novedad</h2>

    <div class="container">
        <div class="row">
            <% array.forEach((o,i,arr) => {  %>
                <div class="col-3">
                    <div class="card col-margin" style="width: 18rem;">
                        <img class="card-img-top" height="300" width="150" src="<%= o.offense.offense_Id.img %>">
                        <div class="card-body">
                            <p class="card-text">
                                <%= o.offense.offense_Id.created_at %>
                                    <br>
                                    <% if (!(o.isRated)){ %>
                                        <form action="/vote/<%=o.offense.offense_Id._id%>" method="POST">
                                            <select name="value">
                                                <option value="1" selected>1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                            </select>
                                            <button>Votar</button>
                                        </form>
                                    <% } else { %>
                                        <a href="/delete/<%=o.offense.offense_Id._id%>">Elimina tu voto</a>
                                    <%}%>
                            </p>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <a href="/logout">
        <h2>Logout</h2>
    </a>
</div>

</div>